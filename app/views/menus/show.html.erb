<div class="menu-show">
  <h2>詳細</h2>
  <div class="menu-show-contents">
    <p class="menu-show-name">レシピ名 : <%= @menu.name %></p>
    <p class="menu-show-image"><%= attachment_image_tag @menu, :image, :fill, 200, 200, format: 'jpeg' %></p>
  </div>
  <p>食材一覧</p>
  <div class="menu-show-table">
    <table class="table table-bordered table-hover">
      <tr>
        <th class="menu-show-table-data">食材名</th>
        <th class="menu-show-table-data2">タンパク質 [g]</th>
        <th class="menu-show-table-data2">脂質 [g]</th>
        <th class="menu-show-table-data2">炭水化物 [g]</th>
        <th class="menu-show-table-data2">人前</th>
        <th class="menu-show-table-data2">カロリー [kcal]</th>
      </tr>
      <% @menu_foods.each do |menu_food| %>
        <tr>
          <td class="menu-show-table-data"><%= menu_food.food.name %></td>
          <td class="menu-show-table-data2"><%= menu_food.food.protain %></br>
          <td class="menu-show-table-data2"><%= menu_food.food.fat %></td>
          <td class="menu-show-table-data2"><%= menu_food.food.carbon %></td>
          <td class="menu-show-table-data2"><%= menu_food.weight %></td>
          <td class="menu-show-table-data2"><%= menu_food.food.food_calory_calculation(menu_food.weight) %></td>
        </tr>
      <% end %>
    </table>
  </div>
  <p>栄養素合計</p>
  <div class="menu-show-table">
    <table class="table table-bordered table-hover">
      <tr>
        <th class="menu-show-table-sum">タンパク質 [g]</th>
        <th class="menu-show-table-sum">脂質 [g]</th>
        <th class="menu-show-table-sum">炭水化物 [g]</th>
        <th class="menu-show-table-sum">カロリー [kcal]</th>
      </tr>
      <tr>
        <td class="menu-show-table-sum"><%= @menu.foods.sum(:protain).to_f.round(2) %></td>
        <td class="menu-show-table-sum"><%= @menu.fat_calculation %></td>
        <td class="menu-show-table-sum"><%= @menu.foods.sum(:carbon).to_f.round(2) %></td>
        <td class="menu-show-table-sum"><%= @menu.calory_calculation %></td>
      </tr>
    </table>
  </div>
  <%= link_to "編集", edit_menu_path, class: "btn btn-success" %>
  <%= link_to "削除", menu_path, method: :delete, class: "btn btn-danger" %>
</div>