<h2>候補</h2>
<%= form_with menu_foods_path, local:true do |f| %>
  <table>
    <tr>
      <th>名前</th>
      <th>タンパク質</th>
      <th>脂質</th>
      <th>炭水化物</th>
      <th>摂取量</th>
      <th>合計カロリー</th>
      <th></th>
    </tr>
    <% @records.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.protain %></td>
        <td><%= food.fat %></td>
        <td><%= food.carbon %></td>
        <td><%= f.text_field :weight %></td>
        <td><%= food_sum == food.protain.to_i*4 + food.fat.to_i*9 + food.carbon.to_i*4 %></td>
        <%= f.hidden_field :user_id, :value => curremt_user.id %>
        <%= f.hidden_field :food_id, :value => food.id %>
        <td><%= f.submit '登録' %></td>
      </tr>
    <% end %>
  </table>
<% end %>