<%= form_with model:@user, method: :patch, local:true do |f| %>
  <table>
    <tr>
      <td>アカウント名</td>
      <td><%= f.text_field :account_name %></td>
    </tr>
    <tr>
      <td>身長</td>
      <td><%= f.text_field :height %>cm</td>
    </tr>
    <tr>
      <td>体重</td>
      <td><%= f.text_field :weight %>kg</td>
    </tr>
    <tr>
      <td>基礎代謝</td>
      <td><%= f.text_field :basal_metabolism %>kcal/day</td>
    </tr>
    <tr>
      <td>目標体重</td>
      <td><%= f.text_field :target %>kg</td>
    </tr>
    <tr>
      <td>期間</td>
      <td><%= f.text_field :term %>month</td>
    </tr>
  </table>
  <%= f.submit "保存" %>
<% end %>