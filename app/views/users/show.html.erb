<div class="user-setting">
  <div class="user-setting-contents">
    <h2>アカウント情報/身体情報/目標</h2>
  </div>
  <div class="user-setting-container">
    <table class="table table-bordered table-hover">
      <tr>
        <td class="user-table-title">アカウント名</td>
        <td class="user-table-data"><%= @user.account_name %></td>
      </tr>
      <tr>
        <td class="user-table-title">身長</td>
        <td class="user-table-data"><%= @user.height %> [cm]</td>
      </tr>
      <tr>
        <td class="user-table-title">体重</td>
        <td class="user-table-data"><%= @user.weight %> [kg]</td>
      </tr>
      <tr>
        <td class="user-table-title">基礎代謝</td>
        <td class="user-table-data"><%= @user.basal_metabolism %> [kcal/day]</td>
      </tr>
      <tr>
        <td class="user-table-title">目標体重</td>
        <td class="user-table-data"><%= @user.target %> [kg]</td>
      </tr>
      <tr>
        <td class="user-table-title">期間</td>
        <td class="user-table-data"><%= @user.term %> [month]</td>
      </tr>
    </table>
    <%= link_to "編集", edit_user_path, class: "btn btn-success" %>
  </div>
</div>